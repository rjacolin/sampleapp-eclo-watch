<!DOCTYPE html>
<html>
<head>

	<title>eclo watch</title>

	<% include include.ejs %>

</head>
<body style="height:100%; background-color:#eee;">

	<div class="row" style="padding-right: 40px; padding-left: 40px;">
		<span class="pull-left">
			<h3>eclo watch</h3>
		</span>
		<span class="pull-right" style="margin-top:20px; margin-bottom:10px; vertical-align: middle;">
			<!-- <a href="#">Pricing</a>
			&nbsp
			<a href="#">Features</a>
			&nbsp -->
			<a data-toggle="modal" class="btn btn-primary btn-sm" href="#loginModal"><span class="glyphicon glyphicon-log-in"></span> Sign in</a>
		</span>
		
	</div>

	
	<div style="height:100%; vertical-align:middle;">
		<div class="jumbotron">
			<div class="container">

				<div class="row">
					<div class="col-md-6">
						<img src="/img/svg_19490-01.svg" class="round pull-right"/>
					</div>

					<div class="col-md-6">
						<h1>
							<p class="text-muted">Welcome to</p>
							<p class="text-primary"><b>eclo watch</b></p>

						</h1>
						<h2 class="text-muted">Monitor <small>your plant</small></h2>
						<h2 class="text-muted">Manage  <small>your greenhouse</small></h2>
						<p>&nbsp</p>
						<p>
							<a data-toggle="modal" class="btn btn-primary btn-lg" href="#loginModal"><span class="glyphicon glyphicon-log-in"></span> Sign in</a>
							<!-- <a data-toggle="modal" class="btn btn-primary btn-lg" href="#registerModal"><span class="glyphicon glyphicon-pencil"></span> Register</a> -->
						</p>
					</div>
				</div>

			</div>
		</div>
	</div>
	
	<div class="container">
		<div class="footer">
			<span class="text-muted">&copy; eclo watch 2013-2014</span>
			<span class="text-muted pull-right"><a href="http://thenounproject.com/noun/plant/#icon-No19490" target="_blank">Plant</a> designed by <a href="http://thenounproject.com/Eak" target="_blank">Eakarius</a> from The Noun Project</span>
		</div>
	</div>


	<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h2 class="modal-title">Sign In</h2>
				</div>
				<div class="modal-body">
					<% if (typeof errormsg != 'undefined'){ %>
					<div class="alert alert-danger">
						<strong>Oups !</strong> <%= errormsg %>.
					</div>
					<%}%>
					<form class="form-horizontal" role="form"  method="POST" action="/signin" accept-charset="UTF-8">
						<div class="form-group">
							<div class="input-group col-lg-12">
								<span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
								<input type="text"	class="form-control" placeholder="Username" name="username">
							</div>
						</div>
						<div class="form-group">
							<div class="input-group col-lg-12">
								<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
								<input type="password" class="form-control" placeholder="Password" name="password">
							</div>
						</div>
						<div class="form-group">
							<div class="col-lg-12">
								<button type="submit" name="submit" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-log-in"></span> Sign in</button>
							</div>
						</div>
					</form>
				</div>
			</div><!-- /.modal-content -->
		</div><!-- /.modal-dialog -->
	</div>

	<script type="text/javascript">
		$('#loginModal').modal({show: <%= (typeof errormsg != 'undefined') ? true : false %>});
	</script>

</body>
</html>
